{
  "name": "multiplatform-downloader",
  "version": "2.0.0",
  "private": true,
  "description": "Professional multi-platform video downloader - YouTube, TikTok, Twitter, Instagram, Reddit, Twitch, Facebook",
  "author": "Esteban Salas",
  "main": "build/electron.js",
  "homepage": "./",
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.23.16",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "zustand": "^5.0.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run copy-electron",
    "copy-electron": "node -e \"require('fs').copyFileSync('public/electron.js', 'build/electron.js')\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "install-ytdlp": "python -m pip install --upgrade yt-dlp",
    "check-ytdlp": "yt-dlp --version",
    "setup": "npm install && npm run install-ytdlp"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron": "^1.4.38",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "wait-on": "^9.0.0"
  },
  "build": {
    "appId": "com.youtube.downloader",
    "productName": "YouTubeDownloader",
    "publish": [
      {
        "provider": "github",
        "owner": "tebansalas97",
        "repo": "MultiPlatform-Downloader"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "build/**/*"
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
